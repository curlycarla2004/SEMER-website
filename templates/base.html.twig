<!DOCTYPE html>
<html lang="fr">
    {% set currentPage = app.request.attributes.get('_route') %}
    <head>
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-EE3TV300CR"></script>
        <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-EE3TV300CR');
        </script>
        <meta charset="UTF-8">

        <title>{% block title %}SEMER – Service Educatif et Mission d'Encadrement Renforcé{% endblock %}</title>
        <meta name="description" content="{% block description %}SEMER – Service Educatif et Mission d'Encadrement Renforcé – Une période d'échec est un moment rêvé pour semer les graines du succès.{% endblock %}">

        <!-- MOBILE SPECIFIC -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <meta name="Content-Language" content="fr">
        <meta name="keywords" content="ASE , aide social à l'enfance, social PJJ, protection judiciaire de la jeunesse, éducatif, placement, jeunes en difficulté, réinsertion,foyer, MECS, lieux de vie, enfance difficulté, aide, précarité, jeunes, délinquants, enfance, insertion, accompagnement,renfort d'équipe,strasbourg">
        <meta name="author" content="SEMER">
        
        {% block facebook %}
        <meta property="og:locale" content="fr_FR">
        <meta property="og:type" content="website">
        <meta property="og:title" content="{{ block('title') }}">
        <meta property="og:description" content="SEMER(Service Educatif et Mission d'Encadrement Renforcé) – Une période d'échec est un moment rêvé pour semer les graines du succès.">
        <meta property="og:url" content="https://www.serviceeducatif.com/">
        <meta property="og:site_name" content="SEMER">
        {% endblock %}

        {% block ogimage %}
        <meta property="og:image" content="{{ asset('images/semer-logo.webp') }}">
        {% endblock ogimage %}

        {% block twitter %}
        <meta name="twitter:card" content="summary"> 
        <meta name="twitter:description" content="SEMER(Service Educatif et Mission d'Encadrement Renforcé) – Une période d'échec est un moment rêvé pour semer les graines du succès.">
        <meta name="twitter:title" content="{{ block('title') }}">
        <meta name="twitter:image" content="{{ asset('images/semer-logo.webp') }}">
        <meta name="twitter:site" content="https://www.serviceeducatif.com/">
        {% endblock %}

        <!-- FAVICONS ICON -->
        <link rel="icon" type="image/png" sizes="150x150" href="{{ asset('images/semer-favicon.webp') }}">
        <link rel="shortcut icon" type="image/x-icon"  sizes="150x150" href="{{ asset('images/semer-favicon.webp') }}" />

        <!-- Styles -->
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/animate.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}

    
        {#Header#}
        {% include 'semer/header.html.twig' %}


        {# Body #}
        {% block body %}
        
        {% endblock %}

        {% block javascripts %}

        <!-- SCRIPTS -->
        <script src="{{ asset('js/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/waypoints.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/jquery.scrollTo.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/jquery.localScroll.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/jquery.magnific-popup.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/common.js') }}" type="text/javascript"></script>

        <script src="{{ asset('js/dz.ajax.js') }}"></script><!-- Contact formulaire -->    
        
        {% endblock %}
    </body>
</html>
